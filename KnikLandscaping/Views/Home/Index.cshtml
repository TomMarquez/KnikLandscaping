@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <img src="~/images/HomePagePlaceHolderPic.jpg" alt="HomePagePlaceholder" width="100%" height="200" />
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-4">
                <h2>About</h2>
                <a asp-area="" asp-controller="Home" asp-action="About">
                    <img src="~/images/AboutPlaceholderImage.jpg" alt="About" width="100%" height="150" />
                </a>
            </div>
            <div class="col-md-4">
                <h2>Contact</h2>
                <a asp-area="" asp-controller="Home" asp-action="Contact">
                    <img src="~/images/ContactPlaceHolderPic.jpg" alt="Contact" width="100%" height="150" />
                </a>
            </div>
            <div class="col-md-4">
                <h2>Testimonials</h2>
                <a asp-area="" asp-controller="Home" asp-action="Testimonials">
                    <img src="~/images/TestimonialPlaceHolderPic.jpg" alt="Testimonials" width="100%" height="150" />
                </a>
            </div>

        </div>
    </div>
</div>